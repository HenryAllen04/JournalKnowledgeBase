# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# See https://editorconfig.org for more information

root = true

[*]
charset = utf-8               # Use UTF-8 character encoding
end_of_line = lf              # Use Unix-style line endings (LF)
insert_final_newline = true   # Ensure file ends with a newline
indent_style = space          # Use spaces for indentation (not tabs)
indent_size = 2               # Use 2 spaces for indentation
trim_trailing_whitespace = true  # Remove trailing whitespace

[*.{js,jsx,ts,tsx}]
indent_size = 2               # 2-space indentation for JavaScript/TypeScript files

[*.{json,yml,yaml}]
indent_size = 2               # 2-space indentation for config files

[*.md]
trim_trailing_whitespace = false  # Preserve trailing whitespace in Markdown (it has meaning) 